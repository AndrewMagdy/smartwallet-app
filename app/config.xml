<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jolocom.smartwallet" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SmartWallet</name>
    <description>
      Application that allows you to manage your digital identity and interact with your identity gateway.
    </description>
    <author email="eugeniu@jolocom.com" href="https://jolocom.com">
      Jolocom Team
    </author>
    <icon density="ldpi" src="res/android/ldpi/icon.png" />
    <icon density="mdpi" src="res/android/mdpi/icon.png" />
    <icon density="hdpi" src="res/android/hdpi/icon.png" />
    <icon density="xhdpi" src="res/android/xhdpi/icon.png" />
    <icon density="xxhdpi" src="res/android/xxhdpi/icon.png" />
    <icon density="xxxhdpi" src="res/android/xxxhdpi/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova-plugin-code-push" spec="^1.11.4" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-zip" spec="^3.1.0" />
    <plugin name="cordova-plugin-nativestorage" spec="^2.2.2" />
    <plugin name="cordova-plugin-secure-storage" spec="^2.6.8" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
</widget>
